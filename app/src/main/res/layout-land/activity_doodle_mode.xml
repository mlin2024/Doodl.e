<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/doodleModeRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DoodleModeActivity">

    <ImageView
        android:id="@+id/doodleModeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <include
        android:id="@+id/doodleModeToolbar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/createNewDoodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doodleModeToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/create_a_new_doodle"
        android:textSize="16sp" />

    <Button
        android:id="@+id/createDoodleButton"
        style="@style/CustomButton.Doodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createNewDoodle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/Create"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconGravity="end"
        app:iconPadding="0dp"
        app:iconSize="30dp" />

    <TextView
        android:id="@+id/addToExistingDoodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createDoodleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/add_to_an_existing_doodle"
        android:textSize="16sp" />

    <Button
        android:id="@+id/contributeDoodleButton"
        style="@style/CustomButton.Doodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addToExistingDoodle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/Contribute"
        app:icon="@drawable/ic_baseline_design_services_24"
        app:iconGravity="end"
        app:iconPadding="0dp"
        app:iconSize="30dp" />

</RelativeLayout>