<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/versionLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/button_left_triangle"
            app:backgroundTint="@color/button_light_blue" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/versionTabLayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_toRightOf="@id/backButton"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <Button
            android:id="@+id/forwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_toRightOf="@id/versionTabLayout"
            android:background="@drawable/button_right_triangle"
            app:backgroundTint="@color/button_light_blue" />

    </LinearLayout>

    <ImageView
        android:id="@+id/doodleImageView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/versionLinearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doodleImageView"
        android:layout_alignStart="@+id/doodleImageView"
        tools:text="just now" />

    <Button
        android:id="@+id/seeContributionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timestampTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/see_contributions"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:icon="@drawable/ic_baseline_arrow_forward_24"
        app:iconGravity="textEnd" />

</RelativeLayout>